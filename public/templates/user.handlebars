<fieldset>
    <legend align="center">{{displayName}}'s profile</legend>
    <div class="row">
        <div class="col-sm-2 col-xs-4 float-left">
            <img src="{{photoURL}}" alt="{{displayName}}" class="img-thumbnail img-fluid">
            <a href="#/changeAvatar" class="btn btn-xs btn-default" id="changeAvatarBtn">Change</a>
        </div>
        <div class="col-sm-10 col-xs-8">
            <form class="form-horizontal">
                <div class="form-group col-sm-12">
                    <label class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">{{displayName}}</p>
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <label class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">{{email}}</p>
                    </div>
                </div>

            </form>
        </div>
        <div class="form-group col-sm-10 col-sm-offset-2">
            <a href="#/editProfile" class="btn btn-sm btn-default clearfix col-sm-offset-2" id="editProfileBtn">Edit
                profile</a>
            <a href="#/changePassword" class="btn btn-sm btn-default clearfix" id="changePasswordBtn">Change
                password</a>
        </div>
        <div class="fb-sharable">
            
            <article class="col-xs-12 col-md-6 col-md-push-3 clearfix" align="center">
                
                <br>
                <h4 align="center">{{displayName}}'s favourite trainings</h4>
                <br>
                <aside class="fb-share-button" data-href="https://workout-a-day.firebaseapp.com/#/user" data-layout="button_count" data-size="small"
                data-mobile-iframe="true">
                <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fworkout-a-day.firebaseapp.com%2F%23%2Fuser&amp;src=sdkpreparse">Share</a>
            </aside>
                <div id="userLikes" class="list-group">
                    <div class="list-group-item">
                    </div>
                </div>
            </article>
            
        </div>
    </div>
</fieldset>