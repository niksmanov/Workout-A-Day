<fieldset>
    <legend align="center">Edit profile</legend>
    <div class="row">
        <div class="col-sm-2 col-xs-4 float-left">
            <img src="{{photoURL}}" alt="{{displayName}}" class="img-thumbnail img-fluid">
            <a href="#/changeAvatar" class="btn btn-xs btn-default" id="changeAvatarBtn">Change</a>
        </div>
        <div class="col-sm-10 col-xs-8">
            <form class="form-horizontal">
                <div class="form-group col-sm-12" id="profileDetailsGroup">
                    <label for="usernameChangeInput" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control col-lg-8 col-sm-8" id="usernameChangeInput" value="{{displayName}}" />
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <label for="emailChangeInput" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control col-lg-8 col-sm-8" id="emailChangeInput" value="{{email}}" />
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <label for="passwordInput" class="col-sm-2 control-label">Current password</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control col-lg-8 col-sm-8" id="passwordInput" disabled="disabled" />
                        <p class="text-info">Provide your password only if you want to change your e-mail!</p>
                    </div>
                </div>
                <a class="btn btn-sm btn-default clearfix col-sm-1 col-sm-offset-2" id="editBtn">Edit</a>
            </form>
        </div>
    </div>
</fieldset>